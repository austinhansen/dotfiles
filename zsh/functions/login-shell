# Ensure that tmux windows are named after the shell, rather than the full path
# to the binary

function login-shell() {
  shell=$(basename "$SHELL")

  # If reattach-to-user-namespace is not available, run the command.
  if [ -n "$(command -v reattach-to-user-namespace)" ]; then
    reattach-to-user-namespace -l "$shell"
  else
    exec "$shell"
  fi
}
